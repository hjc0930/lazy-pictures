{
  "name": "lazy-pictures",
  "version": "0.0.9",
  "description": "React image loading component",
  "keywords": [
    "lazy",
    "lazy-pictures",
    "pictures",
    "react-component",
    "react",
    "lazyload"
  ],
  "files": [
    "lib",
    "dist",
    "es"
  ],
  "peerDependencies": {
    "react": ">=18.0.0"
  },
  "license": "MIT",
  "repository": "https://github.com/hjc0930/lazy-pictures",
  "main": "./lib/index.js",
  "module": "./es/index.js",
  "typings": "./es/index.d.ts",
  "exports": {
    ".": {
      "import": "./es/index.js",
      "require": "./lib/index.js"
    }
  },
  "scripts": {
    "clean": "rimraf lib es dist tsconfig.tsbuildinfo",
    "tsc:es": "tsc --declarationDir es",
    "tsc:lib": "tsc --declarationDir lib",
    "tsc": "npm run tsc:lib && npm run tsc:es",
    "build:dev": "vite build && tsc -p tsconfig.build.json",
    "build": "npm run clean && npm run tsc && vite build",
    "preview": "vite preview"
  },
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@types/node": "^17.0.21",
    "@types/react": "^17.0.33",
    "@types/react-dom": "^17.0.10",
    "@vitejs/plugin-react": "^1.0.7",
    "rimraf": "^5.0.1",
    "typescript": "^4.5.4",
    "vite": "^2.8.0",
    "vite-plugin-build": "^0.10.0"
  }
}
